import turtle
t=turtle.Pen()
t.width(10)
for x in range(100):
  t.pencolor("red")
  t.forward(100) # Forward turtle by l unit
  t.left(90) # Turn turtle by 90 degree
     
  # drawing second side
  t.pencolor("blue")
  t.forward(50) # Forward turtle by w units
  t.left(90) # Turn turtle by 90 degree
  t.pencolor("purple")   
  t.forward(100) # Forward turtle by l unit
  t.left(90) # Turn turtle by 90 degree
     
  # drawing fourth side
  t.pencolor("yellow")
  t.forward(50) # Forward turtle by w units
  t.left(90) # Turn turtle by 90 degree
  
  t.left(120)
  t.backward(50)
  t.left(60)
  t.backward(100)
  t.left(120)
  t.backward(50)

import turtle
t=turtle.Turtle()
 
l = int(input("Enter the length of the Rectangle: "))
w = int(input("Enter the width of the Rectangle: "))
for x in range(10):
# drawing first side
  t.width(5)
  t.forward(l) # Forward turtle by l units
  t.left(90) # Turn turtle by 90 degree
   
  # drawing second side
  t.forward(w) # Forward turtle by w units
  t.left(90) # Turn turtle by 90 degree
   
  # drawing third side
  t.forward(l) # Forward turtle by l units
  t.left(90) # Turn turtle by 90 degree
 
# drawing fourth side
t.forward(w) # Forward turtle by w units
t.left(90) # Turn turtle by 90 degree
#circles get inpput as an integer from user and draw circle, 360/user-input using loop with code, with bgcolor, with different sizes of circle
import turtle
t = turtle.Pen()
t.speed(0)
turtle.bgcolor("pink")
how_many_sides = int(turtle.numinput("enter sides", "how many sides", 10))
for x in range(how_many_sides):
  t.pencolor("red")
  t.circle(100)
  t.width(3)
  t.pencolor("blue")
  t.circle(50)
  t.width(5)
  t.pencolor("black")
  t.circle(25)
  t.width(7)
  t.left(360/how_many_sides)
  
#circles get inpput as an integer from user and draw circle, 360/user-input using loop with code
import turtle
t = turtle.Pen()
t.speed(0)
how_many_sides = int(turtle.numinput("enter sides", "how many sides", 10))
for x in range(how_many_sides):
  t.circle(100)
  t.left(360/how_many_sides)

#steps
import turtle
t=turtle.Pen()
for x in range(20):
  t.width(5)
  t.backward(10)
  t.right(-90)
  t.backward(10)
  t.right(-90)
  t.forward(10)
  t.right(-90)
  t.forward(10)
  t.right(-90)

