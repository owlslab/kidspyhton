#name spiral
import turtle
t=turtle.Pen()
turtle.bgcolor("lightblue")
colors = ["red", "yellow", "black", "blue"]
t.speed(0)
sides=int(turtle.numinput("number of sides", "choose between 1-4)"))
name=turtle.textinput("sister's name", "what is your sisters name")
for x in range(100):
  t.pencolor(colors[x%sides])
  t.penup()
  t.forward(x*4)
  t.pendown()
  t.write(name, font = ("Arial", int((x+4)/4), "bold"))
  t.left(92)
