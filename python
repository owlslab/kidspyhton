#sides
import turtle
sides = eval(input('enter your choice of sides between 2-5\n'))
colors=['red', 'purple', 'blue', 'yellow', 'black']
t=turtle.Pen()
turtle.bgcolor('lightgreen')
t.speed(0)
print("This is my first ever coding experience")
for x in range (36):
  t.pencolor(colors[x%sides])
  t.circle(x)
  t.left(60)
  t.width(x)
print('end of sides coding')
#square 
import turtle
colors=['red', 'purple', 'blue', 'yellow']
t=turtle.Pen()
turtle.bgcolor('lightgreen')
t.speed(0)
print("This is my first ever coding experience")
for x in range (36):
  t.pencolor(colors[x%4])
  t.circle(2*x)
  t.left(60)

